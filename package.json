{
  "name": "bigiron.css",
  "version": "2.0.4",
  "description": "A drop-in collection of CSS styles to make simple websites just a little nicer",
  "scripts": {
    "commit": "cz",
    "build": "gulp build",
    "start": "gulp watch",
    "lint:js": "eslint bookmarklet/original.js docs/script.js docs/index.html gulpfile.js",
    "lint:css": "stylelint src/**/*.css docs/style.css",
    "lint": "npm lint:js --fix && npm lint:css --fix",
    "accessibility": "npm build && node accessibility.js",
    "validate": "npm lint:js && npm lint:css && npm accessibility"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Robbie-Cook/bigiron.css.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "css",
    "css-framework",
    "simple",
    "minimal"
  ],
  "author": "Robbie Cook",
  "release": {
    "branches": [
      "main"
    ]
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Robbie-Cook/bigiron.css/issues"
  },
  "homepage": "https://github.com/Robbie-Cook/bigiron.css",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@changesets/cli": "^2.7.2",
    "@types/css": "0.0.31",
    "autoprefixer": "^9.5.1",
    "browser-sync": "^2.26.14",
    "chalk": "^4.1.0",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-markdown": "^2.0.0-alpha.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-bytediff": "^1.0.0",
    "gulp-filter": "^6.0.0",
    "gulp-flatten": "^0.4.0",
    "gulp-postcss": "^8.0.0",
    "gulp-posthtml": "^3.0.4",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.1.0",
    "gulp-sizereport": "^1.2.1",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-terser": "^2.0.1",
    "htmlnano": "^0.2.3",
    "husky": "^4.3.0",
    "node-sass": "^5.0.0",
    "pa11y": "^5.3.0",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-css-variables": "^0.12.0",
    "postcss-import": "^12.0.1",
    "postcss-inline-svg": "^4.1.0",
    "prettier": "^2.2.1",
    "puppeteer": "^8.0.0",
    "raw-loader": "^4.0.2",
    "semantic-release": "^16.0.4",
    "stylelint": "^13.5.0",
    "stylelint-config-standard": "^21.0.0",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "v8-compile-cache": "^2.2.0",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0",
    "webpack-node-externals": "^2.5.2"
  },
  "browserslist": [
    "defaults"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "dependencies": {}
}
